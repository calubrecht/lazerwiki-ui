{
  "name": "lazerwiki-ui",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "html-react-parser": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "jest-junit": "^11.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0"
  },
  "scripts": {
    "start": "npm run prebuild; HOST=0.0.0.0 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --testResultsProcessor ./node_modules/jest-junit",
    "testInteractive": "react-scripts test",
    "eject": "react-scripts eject",
    "prebuild": "node generate-build-version"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://app-server:8080",
  "jest": {
    "coverageReporters": [
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./junit.xml",
    "classNameTemplate": "{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
