{
  "name": "lazerwiki-ui",
  "private": true,
  "version": "0.5.20",
  "type": "module",
  "scripts": {
    "dev": "npm run prebuild; vite",
    "build": "vite build",
    "build-sa": "vite build --mode sa",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "node scripts/test.js --watchAll=false --testResultsProcessor ./node_modules/jest-junit",
    "testInteractive": "node scripts/test.cjs",
    "prebuild": "node generate-build-version.cjs"
  },
  "dependencies": {
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "dexie": "^4.0.4",
    "html-react-parser": "^5.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-transform-runtime": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/runtime": "^7.23.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-loader": "^9.1.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest-dom": "^4.0.0",
    "vite": ">=5.4.11"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./junit.xml",
    "classNameTemplate": "{filename}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|sass)$": "identity-obj-proxy"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.jsx",
      "!src/main.jsx",
      "!src/svc/DataService.jsx"
    ]
  }
}
